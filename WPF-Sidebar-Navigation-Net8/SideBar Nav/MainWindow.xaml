<Window x:Class="SideBar_Nav.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SideBar_Nav"
        mc:Ignorable="d"
        Title="Meeting Note Taker" SnapsToDevicePixels="True" Height="600" Width="1000" MinHeight="400" MinWidth="800" Icon="pack://application:,,,/Assets/icon.png">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="imgLogo" Source="pack://application:,,,/Assets/logo.png" Width="220" Height="45"/>
            <StackPanel Background="#FF1EA0FF" VerticalAlignment="Stretch" Grid.Row="1">
                <Button x:Name="btnRecord" HorizontalContentAlignment="Left" VerticalAlignment="Center" Content="Record" Style="{StaticResource NavButton}" />
                <Button x:Name="btnMeetingSummary" HorizontalContentAlignment="Left" VerticalAlignment="Center" Content="Meeting Summary" Style="{StaticResource NavButton}" />
                <Button x:Name="btnSettings" HorizontalContentAlignment="Left" VerticalAlignment="Center" Content="Settings" Style="{StaticResource NavButton}" />
            </StackPanel>
        </Grid>
        
        <!-- Main content area where pages are displayed -->
        <Border BorderBrush="LightGray" BorderThickness="1,0,0,0" Grid.Column="2" Grid.Row="0">
            <ContentControl x:Name="ccPageContent" Grid.Row="0" IsTabStop="False" />
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="DimGray" Text="TMA Solutions CO., LTD. © 2024 All Rights Reserved" HorizontalAlignment="Right" Padding="0,0,5,0"/>
    </Grid>
</Window>
