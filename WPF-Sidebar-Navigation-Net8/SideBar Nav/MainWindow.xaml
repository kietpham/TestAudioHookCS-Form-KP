<Window x:Class="SideBar_Nav.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SideBar_Nav"
        mc:Ignorable="d"
        Title="Meeting Note Taker" SnapsToDevicePixels="True" Height="500" Width="1000" MinHeight="400" MinWidth="800" Icon="pack://application:,,,/Assets/icon.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="imgLogo" Source="pack://application:,,,/Assets/logo.png" Width="220" Height="45"/>
            <StackPanel Background="#FF1EA0FF" VerticalAlignment="Stretch" Grid.Row="1">
                <Button x:Name="btnRecord" Margin="10,0,10,0" Foreground="White" Background="#FF1EA0FF" 
                        BorderBrush="Transparent" HorizontalContentAlignment="Left" Padding="10" Cursor="Hand" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Text="Record" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnMeetingSummary" Margin="10,0,10,0" Foreground="White" Background="#FF1EA0FF" 
                        BorderBrush="Transparent" HorizontalContentAlignment="Left" Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Text="Meeting Summary" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSettings" Margin="10,0,10,0" Foreground="White" Background="#FF1EA0FF"
                        BorderBrush="Transparent" HorizontalContentAlignment="Left" Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Text="Settings" VerticalAlignment="Center" FontSize="16"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Main content area where pages are displayed -->
        <Border BorderBrush="LightGray" BorderThickness="1,0,0,0" Grid.Column="2" >
            <ContentControl x:Name="ccPageContent"/>
        </Border>
        
    </Grid>
</Window>
