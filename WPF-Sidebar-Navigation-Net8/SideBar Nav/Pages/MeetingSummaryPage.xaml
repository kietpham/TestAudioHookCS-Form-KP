<UserControl x:Class="SideBar_Nav.Pages.MeetingSummaryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Margin="20, 0, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,18">
            <TextBlock Text="Meeting Summary" Foreground="#FF454545" FontWeight="SemiBold" FontSize="24" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" >
                <Button x:Name="SummaryButton" Content="Summary" DockPanel.Dock="Right" Click="SummaryButton_Click" />
            </StackPanel>
        </DockPanel>
        <!-- Important Notes Section -->
        <StackPanel Grid.Row="1" Margin="0,0,5,0">
            <Border Background="#FF1EA0FF" Padding="6" CornerRadius="4" Margin="0,0,0,5">
                <TextBlock Text="Important Notes" Foreground="White" FontSize="16" />
            </Border>
            <Border BorderBrush="#e7eaf1" BorderThickness="1" CornerRadius="12" Height="240">
                <RichTextBox x:Name="rtbxImportantNotes" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>